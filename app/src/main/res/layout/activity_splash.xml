<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.dvt.weatherapp.viewmodels.LocalWeatherViewModel" />

        <variable
            name="weather"
            type="String" />

        <variable
            name="temperature"
            type="Double" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.splash.SplashActivity">

        <TextView
            android:id="@+id/tvWeatherTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewmodel.allCurrentWeather.get(0).name}"
            android:textColor="@color/white"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvWeatherDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@{Double.toString(viewmodel.allCurrentWeather.get(0).main.temp)}"
            android:textColor="@color/white"
            android:textSize="34sp" />

    </LinearLayout>
</layout>